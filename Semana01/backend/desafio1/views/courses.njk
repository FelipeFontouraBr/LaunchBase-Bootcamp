{% extends "layout.njk" %}

{% block head %}

    <title>{{ item.title }}</title>

{% endblock %}

{% block content %}

    <div id="wrapper" class="course">
        <h1>{{ item.title }}</h1>
    </div>

    <section class="course">

        <div class="card" id="{{item.id}}">
            <div class="card__course-container">
                <iframe src="https://rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>
            </div>
            <div class="card__content">
                <p>{{item.title}}</p>
            </div>
            <div class="card__info">
                <p>{{item.duration}}</p>
                <p class="card__price">{{item.price}}</p>
            </div>
        </div>

    </section>

{% endblock %}