{% extends "layout.njk" %}

{% block title%}
    <title>List Revenue</title>
{% endblock %}

<div class="content">

    {% block menu%}
    <nav>
        <div id="menu">
            <img src="./assets/logo.png" alt="Logo" id="logo">
            <a href="./about.html" id="sobre">Sobre</a>
            <a href="./revenue.html" id="receitas">Receitas</a>
        </div>
    </nav>
    {% endblock %}

    {% block content %}
    <section class="info-pizzas">

        {% for item in items %}
        <div class="card" id="#">
            <div class="card_image">
                <img src="{{ # }}" alt="Foto-{{ # }}" class="img">
            </div>
            <div class="card_title">
                <h2>{{ # }}</h2>
            </div>
            <div class="card_subtitle">
                <p>{{ # }}</p>
            </div>
            <div class="card_revenue">
                <h2>{{ # }}</h2>
                <p>{{ # }}</p>
            </div>
            <div class="card_prepared">
                <h2>{{ # }}</h2>
                <p>{{ # }}</p>
            </div>
            <div class="card_info">
                <h2>{{ # }}</h2>
                <p>{{ # }}</p>
            </div>
        </div>
        {% endfor %}

    </section>
    {% endblock %}

</div>

